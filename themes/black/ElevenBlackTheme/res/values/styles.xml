<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Eleven.Theme" parent="@android:style/Theme.Material">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:popupMenuStyle">@*org.lineageos.eleven:style/PopupMenu</item>
        <item name="android:dropDownListViewStyle">@*org.lineageos.eleven:style/DropDownListView</item>
        <item name="android:textAppearanceSmallPopupMenu">@*org.lineageos.eleven:style/SmallPopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@*org.lineageos.eleven:style/LargePopupMenu</item>
        <item name="android:listViewStyle">@*org.lineageos.eleven:style/ListView</item>
        <item name="android:actionBarStyle">@*org.lineageos.eleven:style/ActionBar</item>
        <item name="android:actionBarWidgetTheme">@*org.lineageos.eleven:style/ActionBarWidgetTheme</item>
        <item name="android:colorPrimary">@*org.lineageos.eleven:color/primary</item>
        <item name="android:colorPrimaryDark">@*org.lineageos.eleven:color/primary_dark</item>
        <item name="android:colorAccent">@*org.lineageos.eleven:color/accent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:colorBackgroundFloating">@android:color/black</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.Material.PopupMenu">
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <style name="ToolBarPopupTheme" parent="android:style/Theme.Material">
        <item name="android:colorBackground">@android:color/black</item>
    </style>
</resources>
